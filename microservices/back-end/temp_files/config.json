{
    "vhosts": {
        "v1": {
            "connection": {
                "url": "amqp://localhost"
            },
            "exchanges": {
                "events": {
                    "assert": false,
                    "check": true,
                    "type": "direct"
                }
            },
            "queues": {
                "users_queue": {
                    "options": {
                        "durable": false
                    }
                },
                "questions_queue": {
                    "options": {
                        "durable": false
                    }
                },
                "answers_queue": {
                    "options": {
                        "durable": false
                    }
                }

            },
            "bindings": {
                "users_bind": {
                    "source": "events",
                    "destination": "users_queue",
                    "destinationType": "queue",
                    "bindingKey": "users"
                },
                "questions_bind": {
                    "source": "events",
                    "destination": "questions_queue",
                    "destinationType": "queue",
                    "bindingKey": "questions"
                },
                "answers_bind": {
                    "source": "events",
                    "destination": "answers_queue",
                    "destinationType": "queue",
                    "bindingKey": "answers"
                }
            },
            "publications": {
                "publish_user": {
                    "vhost": "v1",
                    "exchange": "events",
                    "confirm": true,
                    "timeout": 10000,
                    "routingKey": "users"
                },
                "publish_question": {
                    "vhost": "v1",
                    "exchange": "events",
                    "confirm": true,
                    "timeout": 10000,
                    "routingKey": "questions"
                },
                "publish_answer": {
                    "vhost": "v1",
                    "exchange": "events",
                    "confirm": true,
                    "timeout": 10000,
                    "routingKey": "answers"
                }
            },
            "subscriptions": {
                "users_subscription": {
                    "queue": "users_queue",
                    "vhost": "v1",
                    "retry": {
                        "delay": 1000
                    },
                    "redeliveries": {
                        "limit": 5
                    },
                    "prefetch": 10
                }

            }
        }
    }
}